{
	"name": "@lndr/iam",
	"version": "1.0.0",
	"description": "Identity and access management abstraction for applications.",
	"type": "module",
	"author": "Leandro Schabarum <leandroschabarum.98@gmail.com>",
	"license": "MIT",
	"scripts": {
		"build": "npm run build:server; npm run build:client",
		"build:watch": "npm run build:server:watch; npm run build:client:watch",
		"build:server": "tsdown --tsconfig tsconfig.server.prod.json",
		"build:server:watch": "tsdown --tsconfig tsconfig.server.prod.json --watch",
		"build:client": "tsdown --tsconfig tsconfig.client.prod.json",
		"build:client:watch": "tsdown --tsconfig tsconfig.client.prod.json --watch",
		"package": "npm run build; npm pack",
		"test": "jest",
		"test:watch": "jest --watchAll",
		"lint": "eslint",
		"format": "prettier --write"
	},
	"exports": {
		"./server": {
			"import": "./dist/server/index.js",
			"require": "./dist/server/index.cjs",
			"types": "./dist/server/index.d.cts"
		},
		"./client": {
			"import": "./dist/client/index.js",
			"require": "./dist/client/index.cjs",
			"types": "./dist/client/index.d.cts"
		},
		"./package.json": "./package.json"
	},
	"typesVersions": {
		"*": {
			"server": [
				"./dist/server/index.d.cts"
			],
			"client": [
				"./dist/client/index.d.cts"
			]
		}
	},
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/leandroschabarum/iam.git"
	},
	"bugs": {
		"url": "https://github.com/leandroschabarum/iam/issues"
	},
	"homepage": "https://github.com/leandroschabarum/iam#readme",
	"devDependencies": {
		"@eslint/js": "^9.30.1",
		"@tsconfig/recommended": "^1.0.10",
		"@types/jest": "^29.5.13",
		"@types/node": "^24.0.10",
		"@typescript-eslint/eslint-plugin": "^8.35.1",
		"@typescript-eslint/parser": "^8.35.1",
		"eslint": "^9.30.1",
		"jest": "^29.7.0",
		"prettier": "^3.6.2",
		"ts-jest": "^29.2.5",
		"ts-node": "^10.9.2",
		"tsdown": "^0.15.1",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.35.1"
	},
	"dependencies": {
		"jose": "^6.1.0",
		"keycloak-connect": "^26.1.1",
		"keycloak-js": "^26.2.0"
	}
}
